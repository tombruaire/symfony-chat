{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        <p class="fs-4 mb-0">Mot de passe oublié</p>
                    </div>
                    <div class="card-header bg-warning">
                        <span class="fw-bold">* Champ obligatoire</span>
                    </div>
                    {{ form_start(MdpOublierForm) }}
                        <div class="card-body">
                            <div class="form-floating mb-1">
                                {{ form_row(MdpOublierForm.email) }}
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row d-flex justify-content-center">
                                <div class="col-6">
                                    <button type="reset" class="btn btn-danger w-100">
                                        Annuler
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn btn-success w-100">
                                        Vérifier
                                    </button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(MdpOublierForm) }}
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row d-flex justify-content-center">
            <div class="col-auto">
                <p><a href="{{ path('app_login') }}" class="text-decoration-none text-primary">J'ai retrouvé mon mot de passe !</a></p>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('.form-floating > div > ul > li').classList.add("text-danger");
        document.querySelector('.form-floating > div > ul > li').classList.add("mt-2");
    </script>

{% endblock %}
