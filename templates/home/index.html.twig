{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="container mt-4">
            <div class="row d-flex justify-content-center">
                <div class="col-auto">
                    <div class="alert alert-info" role="alert">
                        <span>Bienvenue {{ app.user.username }} !</span>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
